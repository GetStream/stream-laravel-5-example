{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"repositories": [
	    {
	        "type":"vcs",
	        "url":"https://github.com/peachepe/stream-laravel.git"
	    }
	],
	"require": {
		"laravel/framework": "5.0.*",
		"get-stream/stream-laravel": "2.1.4",
		"illuminate/html": "5.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"heroku/heroku-buildpack-php": "*"
	},
	"autoload": {
		"classmap": [
			"database",
			"app/Http/Controllers",
			"app/Models",
			"app/Console/Commands"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
